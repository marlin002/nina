<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <% if @regex_results[:results].any? %>
    <div class="bg-slate-50 px-4 py-3 border-b border-slate-200">
      <p class="text-sm text-slate-700">
        <span class="font-semibold"><%= @regex_results[:total_unique] %></span> <%= t('search.regex.unique_matches') %> · 
        <span class="font-semibold"><%= @regex_results[:total_occurrences] %></span> <%= t('search.regex.total_occurrences') %>
      </p>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-slate-100">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-semibold text-slate-700">
              <%= t('search.regex.matched_string') %>
            </th>
            <th class="px-4 py-3 text-left text-sm font-semibold text-slate-700 w-24">
              <%= t('search.regex.count') %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @regex_results[:results].each do |result| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-4 py-3 font-mono text-sm text-slate-800">
                <%= link_to search_path(q: result[:matched_string]), class: "hover:text-blue-800 hover:underline", rel: "nofollow", data: { turbo_prefetch: false } do %>
                  <%= result[:matched_string] %>
                <% end %>
              </td>
              <td class="px-4 py-3 font-mono text-sm text-slate-600">
                <%= result[:count] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <h3 class="text-xl font-semibold text-slate-700 mb-2"><%= t('search.empty.no_results') %></h3>
      <p class="text-slate-600"><%= t('search.regex.no_matches_tip') %></p>
    <p class="text-slate-600">
      <%= link_to "Läs snabbguiden för regex på Rexegg", "https://www.rexegg.com/regex-quickstart.php", 
          target: "_blank", 
          rel: "noopener noreferrer",
          class: "text-blue-600 hover:text-blue-800 underline flex items-center justify-center gap-1.5" %>
	</p>
    </div>
  <% end %>
</div>
